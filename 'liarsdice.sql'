

drop table dice;
drop table bid;
drop table player;
drop table round;

CREATE TABLE player
     (username        varchar(25),
     password varchar(25),
     player_name      varchar(25),
     player_id        integer(1),
     player_bid_total        varchar(25),
     round_number     integer(1));

CREATE TABLE round
          (round_number      integer(1),
          winner       varchar(25));

 CREATE TABLE bid
     (bid_total        varchar(25),
     player_id        integer(1));

CREATE TABLE dice
          (player_id       integer(1),
         dice_number      integer(1),
         dice_total       integer);

alter table player
     add constraint player_player_name_pk primary key(player_id);

alter table dice
	add constraint dice_dice_number_pk primary key(dice_number);

alter table round
     add constraint round_round_number_pk primary key(round_number);

alter table player
     add constraint player_round_number_fk foreign key(round_number)
     references round(round_number);

alter table dice
     add constraint dice_player_id_fk foreign key(player_id)
     references player(player_id);

alter table bid
     add constraint bid_player_id_fk foreign key(player_id)
     references player(player_id);


SELECT username, password, player_name, player_id, round
FROM player
INNER JOIN bid
ON player.player_bid_total = bid.bid_total;

insert into round(round_number)
     values(1);

insert into bid(bid_total)
	values(500);

insert into player
     values('user','pass','Jim',1,1);

select * from player;